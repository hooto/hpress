{
  "meta": {
    "name": "core/general",
    "version": "0.0.22"
  },
  "srvname": "core-general",
  "status": 1,
  "title": "General",
  "nodeModels": [
    {
      "meta": {
        "name": "menu"
      },
      "modname": "core/general",
      "title": "Menu",
      "comment": "Customize the site navigation menu",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "length": "100",
          "attrs": [
            {
              "key": "langs",
              "value": "en-us,zh-cn"
            }
          ],
          "title": "Title"
        },
        {
          "name": "url",
          "type": "string",
          "length": "100",
          "title": "URL"
        },
        {
          "name": "weight",
          "type": "int32",
          "length": "0",
          "title": "Weight"
        }
      ],
      "extensions": {}
    },
    {
      "meta": {
        "name": "page"
      },
      "modname": "core/general",
      "title": "Basic Page",
      "comment": "Use basic pages for your static content, such as an 'About us' page",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "length": "100",
          "title": "Title"
        },
        {
          "name": "content",
          "type": "text",
          "length": "0",
          "attrs": [
            {
              "key": "ui_rows",
              "value": "12"
            }
          ],
          "title": "Content"
        }
      ],
      "extensions": {}
    }
  ],
  "actions": [
    {
      "name": "view",
      "datax": [
        {
          "name": "page",
          "type": "node.entry",
          "query": {
            "table": "page",
            "limit": 1
          },
          "cache_ttl": 3600000
        }
      ]
    },
    {
      "name": "topnav",
      "datax": [
        {
          "name": "topnav",
          "type": "node.list",
          "query": {
            "table": "menu",
            "order": "field_weight asc",
            "limit": 50
          },
          "cache_ttl": 600000
        }
      ]
    }
  ],
  "router": {
    "routes": [
      {
        "path": "view/:id",
        "dataAction": "view",
        "template": "entry.tpl"
      }
    ]
  }
}